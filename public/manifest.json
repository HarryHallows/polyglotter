{
  "name": "Polyglotter",
  "description": "Extension to translate highlighted text on a web page to a selected language",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "icons/Polyglotter_icon.png"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": [
      "scripting", "tabs"
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}